[user]
	name = {{ user_git_name }}
	email = {{ user_github_email }}
[alias]
	co = checkout
[core]
	excludesfile = ~/.gitexcludes
	pager = less -FRSX
	editor = vim
[color]
    branch = auto
    diff = auto
    interactive = auto
    pager = true
    status = auto
    ui = true
[color "status"]
    added = green
    changed = yellow
    untracked = red
[push]
	default = simple
[diff]
	tool = bc3
[merge]
	tool = bc3
[mergetool "bc3"]
	trustExitCode = true
[pull]
	rebase = false
